{
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "start": {
    "command": "n8n"
  },
  "runtime": {
    "memory": 1024,
    "cpu": 1
  },
  "ports": [
    {
      "port": 5678,
      "protocol": "http"
    }
  ],
  "env": {
    "N8N_BASIC_AUTH_ACTIVE": "true",
    "N8N_BASIC_AUTH_USER": "${N8N_BASIC_AUTH_USER}",
    "N8N_BASIC_AUTH_PASSWORD": "${N8N_BASIC_AUTH_PASSWORD}",
    "N8N_HOST": "${ZEABUR_WEB_URL}",
    "N8N_PROTOCOL": "https",
    "N8N_PORT": "5678",
    "WEBHOOK_URL": "${ZEABUR_WEB_URL}",
    "GENERIC_TIMEZONE": "Asia/Hong_Kong",
    "TZ": "Asia/Hong_Kong"
  }
}
